---
import { Container } from "@components/Container";
import { TypographyAstro } from "@components/Typography";
import { useTranslations, type Languages } from "@i18n/index";
import { loopWavy } from "@assets/index";
import { VideoSource } from "@components/Video";
import { DescriptionAstro } from "@components/Description";

const { lang } = Astro.params;
const t = useTranslations(lang as Languages, "insights.description");
---

<Container class="mt-7">
  <h2
    class:list={[
      "flex flex-wrap gap-x-2 md:gap-x-5 2xl:gap-x-8",
      "gap-y-1 md:gap-y-2 2xl:gap-y-4",
      "font-asket800 uppercase text-green-200 md:tracking-2",
      "text-36 md:text-64 lg:text-72 2xl:text-96",
    ]}
  >
    <span>
      {t("line-1-contained")}
    </span>
    <span class="text-stroken-green-2 md:text-stroken-green-4">
      {t("line-2-outlined")}
    </span>
    <span>{t("line-3-contained")}</span>
  </h2>

