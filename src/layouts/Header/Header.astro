---
import { smallLogo } from "src/assets";
import HeaderLinks from "./HeaderLinks.astro";
import { ButtonAstro } from "@components/Button";
import { getFromLocale, useTranslations } from "@i18n/index";
import { formatLink } from "@utils/index";

const lang = getFromLocale(Astro.currentLocale);
const t = useTranslations(lang, "header");
---

<div class="fixed right-0 left-0 top-8 z-50 box-border mx-4 md:mx-8">
  <header
    class:list={[
      "flex items-center justify-between box-border ",
      "max-w-[1680px] mx-auto py-4 md1:py-5 px-8 bg-brand-black bg-opacity-[48%] shadow-inner backdrop-blur-xl",
    ]}
  >
    <a href={formatLink(Astro.url, "/")}>
      <img src={smallLogo.src} class="max-h-12 md1:max-h-none" alt="logo" />
    </a>
    <nav class="ml-auto hidden md1:flex items-center gap-x-10">
      <HeaderLinks />
    </nav>

    <ButtonAstro color="biscuit" variant="contained" class="ml-10">
      {t("contactUs")}
    </ButtonAstro>
  </header>
</div>
