---
import { Container } from "@components/Container";
import { SectionTitle, TypographyAstro } from "@components/Typography";
import { challenge } from "@assets/index";
import type { IProjectWithInfo } from "@interfaces/project";

type Props = IProjectWithInfo;
const data = Astro.props;
---

<Container>
  <SectionTitle title={data.project_info.challenge.title} type="challenge" />
  <article class="grid grid-cols-[280px,auto] gap-y-6 gap-x-5">
    <img src={challenge.src} alt="" class="w-[280px] h-[291] row-span-2" />
    <TypographyAstro type="subTitle-sm-1" color="black">
      {data.project_info.challenge.subTitle}
    </TypographyAstro>
    <TypographyAstro type="body-4" color="black">
      {data.project_info.challenge.description}
    </TypographyAstro>
  </article>
</Container>
