---
interface Props {
  href?: string;
  class?: string;
  active?: boolean;
  color?: "black" | "biscuit" | "green";
  variant?: "contained" | "none";
}

const {
  href,
  class: className,
  active,
  color = "black",
  variant = "none",
} = Astro.props;
---

<a
  href={href}
  class:list={[
    "min-h-11 min-w-11 px-5 py-3 rounded box-border font-gothic700",
    "cursor-pointer duration-500",
    "uppercase text-center font-bold text-base",
    {
      "text-brand-white bg-brand-green":
        variant === "contained" && color === "biscuit",
      "hover:bg-brand-white hover:text-brand-green text-brand-white":
        color === "biscuit",
      "bg-brand-white !text-brand-green": color === "biscuit" && active,
    },
    {
      "bg-brand-black text-brand-white hover:bg-green-100 focus:bg-green-500":
        variant === "contained" && color === "black",
      "text-brand-black hover:bg-green-100 hover:text-brand-white":
        color === "black",
      "bg-brand-black text-brand-white": color === "black" && active,
    },
    {
      "text-brand-green hover:bg-brand-green hover:text-brand-white":
        color === "green",
      "bg-brand-green !text-brand-white": color === "green" && active,
    },
    className,
  ]}><slot /></a
>
