---
import { Container } from "@components/Container";
import { SectionTitle, TypographyAstro } from "@components/Typography";
import type { Languages } from "@i18n/ui";
import { useTranslations } from "@i18n/utils";
import { challenge } from "@assets/index";

const { lang } = Astro.params;

const t = useTranslations(lang as Languages, "whoWeAre.mission");
---

<Container>
  <SectionTitle title={t("title")} type={t("type")} />
  <article
    class="grid lg:grid-cols-[275px,auto] 3xl:grid-cols-[395px,auto] gap-y-6 gap-x-5"
  >
    <img
      src={challenge.src}
      alt=""
      class="w-full h-[193px] lg:h-full xl:h-[193px] row-span-2 object-cover object-center"
    />
    <TypographyAstro type="subTitle-sm-1" color="black">
      {t("subTitle")}
    </TypographyAstro>
    <TypographyAstro type="body-4" color="black">
      {t("description")}
    </TypographyAstro>
  </article>
</Container>
