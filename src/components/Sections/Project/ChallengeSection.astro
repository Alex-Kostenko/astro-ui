---
import { Container } from "@components/Container";
import { SectionTitle, TypographyAstro } from "@components/Typography";
import { rareWavesBlack } from "@assets/index";
import type { IProject } from "@interfaces/project";
import { VideoSource } from "@components/Video";

type Props = IProject;
const data = Astro.props;
---

<Container>
  <SectionTitle title={data.challengeTitle} type="challenge" />
  <article
    class="grid lg:grid-cols-[275px,auto] 3xl:grid-cols-[395px,auto] gap-y-6 gap-x-5"
  >
    <VideoSource
      source={[{ src: rareWavesBlack }]}
      class="w-full h-[280px] lg:h-full xl:h-[291px] row-span-2 mix-blend-difference"
    />
    <TypographyAstro type="subTitle-sm-1" color="black">
      {data.challengeSubtitle}
    </TypographyAstro>
    <TypographyAstro type="body-4" color="black">
      {data.challengeDescription}
    </TypographyAstro>
  </article>
</Container>
