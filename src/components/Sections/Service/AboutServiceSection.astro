---
import { Container } from "@components/Container";
import List from "@components/List";
import { SectionTitle } from "@components/Typography";
import { type Languages, useTranslations } from "@i18n/index";
import { AboutService } from "@assets/index";
import { Image } from "astro:assets";
import { ServiceHeader } from "@components/ServiceHeader";

const { lang } = Astro.params;

const t = useTranslations(lang as Languages, "service.about");
---

<Container>
  <SectionTitle title={t("title")} type={t("tag")} />
  <article class="flex flex-col gap-10">
    <ServiceHeader>
      {t("header")}
    </ServiceHeader>
    <div class="flex gap-5">
      <Image src={AboutService} alt="" class="hidden lg:block" />
      <List items={t("list")} />
    </div>
  </article>
</Container>

<style is:global>
  .header-shadow {
    box-shadow: 0 4px 4px #00000040;
  }
</style>
