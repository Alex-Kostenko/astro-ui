---
import { email, linkedInLogo, telegram } from "@assets/icon";
import { Container } from "@components/Container";
import { SectionTitle, TypographyAstro } from "@components/Typography";
import type { IWorker } from "@interfaces/index";

interface Props {
  recruiter: IWorker;
  title: string;
  type: string;
}

const { recruiter, title, type } = Astro.props;
---

<Container>
  <SectionTitle type={type} title={title} />
  <div class="flex 2xl:ml-[295px] 3xl:ml-[415px] gap-8">
    <img
      src={recruiter.photo.base64}
      alt="recruiter photo"
      class="rounded w-[146px] h-[146px] object-cover object-center"
    />
    <div class="flex flex-col gap-2">
      <TypographyAstro type="title-1">
        {recruiter.name}
      </TypographyAstro>
      <TypographyAstro type="subTitle-sm-1">
        uni code {recruiter.position}
      </TypographyAstro>
      <div class="flex gap-4 mt-auto">
        {
          recruiter.linkedIn && (
            <div class="flex mt-auto gap-4">
              <a
                href={recruiter.linkedIn}
                target="_blank"
                aria-label="linkedin"
              >
                <img src={linkedInLogo.src} alt="linkedin logo" />
              </a>
            </div>
          )
        }
        {
          recruiter.telegram && (
            <div class="flex mt-auto gap-4">
              <a
                href={recruiter.telegram}
                target="_blank"
                aria-label="telegram"
              >
                <img src={telegram.src} alt="telegram logo" />
              </a>
            </div>
          )
        }
        {
          recruiter.email && (
            <div class="flex mt-auto gap-4">
              <a href={`mailto:${recruiter.email}`} aria-label="email">
                <img src={email.src} alt="email logo" />
              </a>
            </div>
          )
        }
      </div>
    </div>
  </div>
</Container>
