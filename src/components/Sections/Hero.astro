---
import { useTranslations, type Languages } from "@i18n/index";
import { cubeNear, logo } from "src/assets";
import { TypographyAstro } from "@components/Typography";

const { lang } = Astro.params;
const t = useTranslations(lang as Languages, "hero");
---

<section class="relative sm1:min-h-[788px] min-h-dvh pt-[136px] flex">
  <video
    autoplay
    muted
    loop
    class="absolute -z-10 top-0 right-0 left-0 bg-black bg-opacity-45 h-full w-full object-cover"
  >
    <source src={cubeNear} type="video/mp4" />
  </video>
  <div
    class="flex flex-col md1:flex-row md1:justify-between gap-y-20 gap-x-6 h-full w-full max-w-[1616px] my-auto mx-auto px-8"
  >
    <img
      class="flex-[0_1_50%] max-w-[660px] w-full mx-auto"
      src={logo.src}
      alt="logo"
    />
    <article
      class="md1:max-w-[520px] w-full flex flex-col md1:gap-y-3 gap-y-10 justify-between flex-[1_1_40%]"
    >
      <div
        class="text-5xl sm1:text-32 font-extrabold text-center md1:text-start"
      >
        <h5 class="text-brand-white mb-3">{t("title")}</h5>
        <h5 class="text-brand-beigeLight">{t("subTitle")}</h5>
      </div>
      <TypographyAstro
        color="white"
        type="body-4"
        class="text-center md1:text-start"
      >
        {t("descripton")}
      </TypographyAstro>
    </article>
  </div>
</section>
