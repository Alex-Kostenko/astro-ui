---
import { Container } from "@components/Container";
import { SectionTitle, TypographyAstro } from "@components/Typography";
import { challenge } from "@assets/index";
import type { IProject } from "@interfaces/project";

type Props = IProject;
const data = Astro.props;
---

<Container>
  <SectionTitle title={data.challengeTitle} type="challenge" />
  <article class="grid lg:grid-cols-[280px,auto] gap-y-6 gap-x-5">
    <img
      src={challenge.src}
      alt=""
      class="w-full lg:w-[280px] h-[280px] lg:h-full xl:h-[291] row-span-2 object-cover object-center"
    />
    <TypographyAstro type="subTitle-sm-1" color="black">
      {data.challengeSubtitle}
    </TypographyAstro>
    <TypographyAstro type="body-4" color="black">
      {data.challengeDescription}
    </TypographyAstro>
  </article>
</Container>
